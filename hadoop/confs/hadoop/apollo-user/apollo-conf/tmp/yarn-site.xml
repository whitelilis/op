		<name>yarn.nodemanager.health-checker.script.path</name>
		<value>/etc/hadoop/conf/healthChecker</value>
	</property>
	<property>
		<name>yarn.nodemanager.health-checker.script.timeout-ms</name>
		<value>600000</value>
	</property>
	<property>
		<name>yarn.nodemanager.local-dirs</name>
